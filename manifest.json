{
  "name": "Github README TOC",
  "version": "1.2",
  "description": "Shows a TOC (Table Of Content) on the right sidebar generated from the README file of any GitHub projectâ€™s root page or Wikis page",
  "permissions": ["*://*.github.com/*", "webNavigation", "tabs"],
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "js":["src/main.js"],
      "css": ["contentstyle.css"]
    }
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },

  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "manifest_version": 2
}
